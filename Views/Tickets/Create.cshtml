@model CreateTicketRequest
<div class="all-background p-2">
<div class="container mt-2">
<h1>Create New Ticket</h1>

<form method="post" asp-action="Create" asp-controller="Tickets">
    <div class="form-group row">
        @* <label asp-for="Title">Title</label> *@
        <input class="form-control" asp-for="Title" placeholder="Title" type="text">
    </div>
    <div class="form-group row">
        @* <label asp-for="Description">Description</label> *@
        <input class="form-control" asp-for="Description" placeholder="Description" type="text">
    </div>
    <div class="form-group row">
        @* <label asp-for="TimeOfMatch">Time of match</label> *@
        <input class="form-control" asp-for="TimeOfMatch" placeholder="Time of match" type="datetime-local">
    </div>
    <div class="form-group row">
        @* <label asp-for="Price">Price</label> *@
        <input class="form-control" asp-for="Price" placeholder="Price" type="text">
    </div>
    <div asp-validation-summary="All" class="text-danger" mb-2>
    </div>
    <div class="w-100 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
</form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}